{
    "name": "payslip-manager",
    "version": "1.0.0",
    "description": "Secure Local Payslip Generator and Manager",
    "main": "dist-main/index.js",
    "author": "Antigravity",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "start": "node server/index.js",
        "preview": "vite preview"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.89.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "nedb-promises": "^6.2.1",
        "nodemailer": "^6.9.8",
        "pdfmake": "^0.2.9",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "vite": "^5.0.12"
    },
    "build": {
        "appId": "com.payslip.manager",
        "productName": "EurosHub",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "dist-main/**/*",
            "dist-preload/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    }
}
